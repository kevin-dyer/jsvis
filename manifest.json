{
  "name": "SeeJS",
  "description": "An interactive visualization of your page's javascript code.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "blue-icon.png",
    //"default_popup": "popup.html",
    "default_title": "Build visualization"
  },

  "permissions": [
    "background",
    "activeTab",
    "tabs",
    "http://*/*", 
    "https://*/*"
  ],

  "background": {
    "scripts": [
      "bg.js",
      "esprima.js",
      "utils.js",
      "esmorph.js"
    ],
    "persistent": false
  },

  "manifest_version": 2
}
